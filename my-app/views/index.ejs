<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý Nhân Viên</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Quản lý Nhân Viên</h1>
  
  <!-- Form thêm nhân viên -->
  <form action="/employees" method="POST" enctype="multipart/form-data">
    <label for="name">Tên nhân viên:</label>
    <input type="text" id="name" name="name" required><br><br>
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br><br>
    
    <label for="age">Tuổi:</label>
    <input type="number" id="age" name="age" required><br><br>
    
    <label for="salary">Lương:</label>
    <input type="number" id="salary" name="salary" required><br><br>
    
    <label for="profileImage">Hình ảnh:</label>
    <input type="file" id="profileImage" name="profileImage" accept="image/*" required><br><br>

    <button type="submit">Thêm nhân viên</button>
  </form>
  
  <h2>Danh sách Nhân Viên</h2>
  <table border="1">
    <thead>
      <tr>
        <th>Tên nhân viên</th>
        <th>Email</th>
        <th>Tuổi</th>
        <th>Lương</th>
        <th>Hình ảnh</th>
        <th>Thao tác</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach(employee => { %>
        <tr>
          <td><%= employee.name %></td>
          <td><%= employee.email %></td>
          <td><%= employee.age %></td>
          <td><%= employee.salary %></td>
          <td>
            <% if (employee.profileImage) { %>
              <img src="<%= employee.profileImage %>" alt="Hình nhân viên" width="100">
            <% } else { %>
              Không có hình ảnh
            <% } %>
          </td>
          <td>
            <a href="/employees/<%= employee._id %>/edit">Sửa</a> |
            <a href="/employees/<%= employee._id %>/delete" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
