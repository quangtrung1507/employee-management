<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý Nhân Viên</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Quản lý Nhân Viên</h1>
  
  <!-- Form thêm hóa đơn -->
  <form action="/invoices" method="POST" enctype="multipart/form-data">
    <label for="customerName">Tên nhân viên:</label>
    <input type="text" id="customerName" name="customerName" required><br><br>
    
    <label for="item">Email:</label>
    <input type="text" id="item" name="item" required><br><br>
    
    <label for="quantity">Tuổi:</label>
    <input type="number" id="quantity" name="quantity" required><br><br>
    
    <label for="price">Lương:</label>
    <input type="number" id="price" name="price" required><br><br>
    
    <label for="productImage">Hình ảnh:</label>
    <input type="file" id="productImage" name="productImage" accept="image/*" required><br><br>

    <button type="submit">Tạo nhân viên</button>
  </form>
  
  <h2>Danh sách Nhân Viên</h2>
  <table border="1">
    <thead>
      <tr>
        <th>Tên nhân viên</th>
        <th>Email</th>
        <th>Tuổi</th>
        <th>Lương</th>
        <th>Hình ảnh</th>
        <th>Ngày</th>
        <th>Thao tác</th>
      </tr>
    </thead>
    <tbody>
      <% invoices.forEach(invoice => { %>
        <tr>
          <td><%= invoice.customerName %></td>
          <td><%= invoice.item %></td>
          <td><%= invoice.quantity %></td>
          <td><%= invoice.price %></td>
          <td>
            <% if (invoice.productImage) { %>
              <img src="<%= invoice.productImage %>" alt="Hình sản phẩm" width="100">
            <% } else { %>
              Không có hình ảnh
            <% } %>
          </td>
          <td><%= new Date(invoice._id.getTimestamp()).toLocaleDateString() %></td>
          <td>
            <a href="/invoices/<%= invoice._id %>/edit">Sửa</a> |
            <a href="/invoices/<%= invoice._id %>/delete" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>  
</body>
</html>
